<script>
  (function() {
    const password = 'KNAPP';
    const contenido = document.getElementById('contenido-oculto');
    let intentos = 0;
    const maxIntentos = 3;

    function pedirAcceso() {
      while(intentos < maxIntentos) {
        const entrada = prompt('Ingrese la contraseña para ver la información');
        if (entrada === null) {
          alert('Acceso cancelado');
          break;
        }
        if (entrada === password) {
          contenido.style.display = 'block';
          return;
        } else {
          intentos++;
          alert('Contraseña incorrecta. Intentos restantes: ' + (maxIntentos - intentos));
        }
      }
      alert('Has excedido el número de intentos. Acceso denegado.');
    }

    pedirAcceso();
  })();
</script>
