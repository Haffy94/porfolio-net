@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@using System.Globalization

@{
    ViewData["Title"] = @Localizer["ContactTitle"];
}

<div class="container-fluid d-flex justify-content-center">
    <div class="row justify-content-md-center text-center">
        <div class="col-12 col-md-6 bg-white border-custom-left" style="box-shadow: 0 5px 5px 0 gray, 0 -3px 10px rgba(0,0,0,0.1); ;">
            <h2 class="text-center" style="margin-top: 3.125rem;0px; margin-bottom: 3.125rem;">@Localizer["CalendlyTitle"]</h2>
            <div
                class="calendly-inline-widget"
                data-url="https://calendly.com/lucas_hafner/30min?hide_gdpr_banner=0&background_color=f7f4ed&text_color=4f4f4f&primary_color=c08081"
                style="width:100%;height:900px;"
            >
            </div>
            <script
                type="text/javascript"
                src="https://assets.calendly.com/assets/external/widget.js"
                async></script>
            <!-- Calendly inline widget end -->
        </div>
        <div class="col-12 col-md-6 text-start bg-white border-custom-right" style="box-shadow: 0 5px 5px 0 gray, 0 -3px 10px rgba(0,0,0,0.1); ;"" >
            <h2 class="text-center" style="margin-top: 3.125rem;;">@Localizer["ContactForm"]</h2>

            <div style="max-width:500px; margin:auto; padding:15px; background:white; border-radius:15px; box-shadow:0 5px 5px 0 gray, 0 -3px 10px rgba(0,0,0,0.1); margin-top: 6rem;">
                <form asp-controller="Home" asp-action="Contact">
                    <div class="mb-3">
                        <label for="name" class="form-label">@Localizer["Name"]</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="@Localizer["NamePlaceholder"]">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">@Localizer["Email"]</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="@Localizer["EmailPlaceholder"]">
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">@Localizer["Message"]</label>
                        <textarea class="form-control" id="message" name="message" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">@Localizer["Send"]</button>
                </form>
            </div>

            <h4 class="text-center" style="margin-top: 6rem;"
            >@Localizer["Privacy1"] <a href="#" data-bs-toggle="modal" data-bs-target="#privacyModal">@Localizer["Privacy2"]</a>.</h3>
            
        </div>   
    </div>
</div>
@await Html.PartialAsync("_PrivacyModal")
