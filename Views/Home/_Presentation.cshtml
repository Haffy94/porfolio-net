@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@using System.Globalization

<div class="container my-5">
    <div class="row align-items-center">
        <div class="col-12 col-md-5 text-center mb-4 mb-md-0">
            <img 
                id="photo"
                src="~/images/yo.png"
                alt="Foto de mi"
                style="max-height:300px;"
            />
        </div>
        <div class="col-12 col-md-7">
            <h1 class="display-4">@Localizer["WelcomeTitle"]</h1>
            <h2>@Localizer["Introduction"]</h2>
        </div>
    </div>
</div>

<div class="row justify-content-center text-center bg-primary">
    <div class="col col-md-7 welcome-section">
        <h1>@Localizer["TechnologiesTitle"]</h1>
        <p>
            @Localizer["TechnologiesDescription"]
        </p>

    </div>
</div>